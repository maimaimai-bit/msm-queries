<h1><%= @the_director.name %></h1>

<dl>
  <dt>Date of birth</dt>
  <dd><%= @the_director.dob %></dd>

  <dt>Bio</dt>
  <dd><%= @the_director.bio %></dd>

  <dt>Filmography</dt>
  <dd>
    <% @the_director.movies.each do |a_movie| %>
      <div>
        <%= a_movie.title %>
        
        <a href="/movies/<%= a_movie.id %>">
          Show details
        </a>
      </div>
    <% end %>
  </dd>
</dl>
